@{
    ViewBag.Title = "Set Monthly Budget";
}

<div class="container">
    <h2>Set Monthly Budget</h2>
    <form>
        <div class="form-group">
            <label for="totalBudget">Total Monthly Budget</label>
            <input type="number" class="form-control" id="totalBudget" placeholder="Enter total budget amount" />
        </div>
        <div class="form-group">
            <label for="categoryBudget">Budget for Groceries</label>
            <input type="number" class="form-control" id="categoryBudget" placeholder="Enter amount" />
        </div>
        <button type="submit" class="btn btn-primary">Set Budget</button>
    </form>
</div>
